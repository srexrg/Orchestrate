{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@orchestrate/shared": ["../../shared/dist/index.d.ts"],
      "@orchestrate/shared/*": ["../../shared/dist/*"]
    },
    "typeRoots": ["./node_modules/@types", "../../shared/dist"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "../../shared/types", "../../shared/utils"]
} 